SELECT s.sale_id,
       s.sales_date ,
       c.first_name || ' ' || c.last_name "CUSTOMER_NAME",
       p.product ,
       s.total_amount
       
FROM sales s
LEFT JOIN customer c ON c.customer_id = s.customer_id 
LEFT JOIN product p ON p.product_id = s.product_id
WHERE s.total_amount >= 1500
ORDER BY s.total_amount DESC
